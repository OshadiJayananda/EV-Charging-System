<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    android:fitsSystemWindows="true">

    <!-- Top Status Bar Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/gradient_background_top"
        android:layout_alignParentTop="true" />

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerLayout"
        android:paddingBottom="90dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Card with Modern Design -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp">

                    <!-- Profile Avatar with Gradient -->
                    <LinearLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/circle_gradient_profile"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:id="@+id/ivProfileOwner"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_profile"
                            app:tint="@color/white"
                            android:contentDescription="Profile picture" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvWelcomeOwner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome, Pasindu!"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingBottom="4dp" />

                        <TextView
                            android:id="@+id/tvOwnerId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Owner ID: 0W199878678967"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Action Icons -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Notifications - FIXED BADGE POSITIONING -->
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cardNotification"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="2dp"
                                android:backgroundTint="@color/light_green">

                                <ImageButton
                                    android:id="@+id/btnNotifications"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_notifications"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    app:tint="@color/primary_color"
                                    android:contentDescription="Notifications" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/tvNotificationCount"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignRight="@id/cardNotification"
                                android:layout_gravity="end|top"
                                android:background="@drawable/circle_red_solid"
                                android:elevation="8dp"
                                android:gravity="center"
                                android:text="3"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:translationX="-4dp"
                                android:translationY="4dp"
                                android:visibility="visible" />
                        </RelativeLayout>


                        <!-- Logout -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            android:backgroundTint="@color/logout_card_background">

                            <ImageButton
                                android:id="@+id/btnLogoutOwner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_logout"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                app:tint="@color/red"
                                android:contentDescription="Logout" />
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Search Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <!-- Search Bar -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        android:backgroundTint="@color/light_green">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_search"
                                app:tint="@color/primary_color"
                                android:layout_marginEnd="12dp" />

                            <AutoCompleteTextView
                                android:id="@+id/searchStations"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Search stations..."
                                android:textColor="@color/text_primary"
                                android:textColorHint="@color/text_secondary"
                                android:imeOptions="actionSearch"
                                android:inputType="text"
                                android:background="@android:color/transparent"
                                android:completionThreshold="1"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Station Type Filter -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="120dp"
                        android:layout_height="52dp"
                        android:layout_marginStart="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        android:backgroundTint="@color/light_green">

                        <Spinner
                            android:id="@+id/spinnerStationType"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:spinnerMode="dropdown" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Map Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Map Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="@drawable/gradient_primary_header">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/white"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nearby Charging Stations"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvStationsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 stations"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:background="@drawable/circle_white_transparent"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp" />
                    </LinearLayout>

                    <!-- Map View -->
                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions Section Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_flash_on" />

            <!-- Action Buttons Grid - IMPROVED SHADOWS AND SPACING -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp">

                <!-- Reserve Slot Button - IMPROVED SHADOW -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnReserveSlot"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:outlineAmbientShadowColor="@color/primary_dark"
                    android:outlineSpotShadowColor="@color/primary_dark"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardMaxElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="20dp">

                        <!-- Icon with better spacing -->
                        <LinearLayout
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/circle_green_solid"
                            android:gravity="center"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_flash_on"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <!-- Text content with better spacing -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingVertical="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="2dp"
                                android:text="Reserve Slot"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="2dp"
                                android:text="Book your charging slot in advance"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Chevron icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/text_secondary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- My Bookings Button - IMPROVED SHADOW -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnMyBookings"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:outlineAmbientShadowColor="@color/primary_dark"
                    android:outlineSpotShadowColor="@color/primary_dark"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardMaxElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="20dp">

                        <!-- Icon with better spacing -->
                        <LinearLayout
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/circle_blue_solid"
                            android:gravity="center"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <!-- Text content with better spacing -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingVertical="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="2dp"
                                android:text="My Bookings"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="2dp"
                                android:text="View and manage your reservations"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Chevron icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/text_secondary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Charging History Button - FIXED HEIGHT ISSUE -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnChargingHistory"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:outlineAmbientShadowColor="@color/primary_dark"
                    android:outlineSpotShadowColor="@color/primary_dark"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardMaxElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="16dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="20dp">

                        <!-- Icon with better spacing -->
                        <LinearLayout
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/circle_purple_solid"
                            android:gravity="center"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_history"
                                app:tint="@color/white" />
                        </LinearLayout>
                        <!-- Text content with better spacing -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingVertical="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="2dp"
                                android:text="Charging History"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="2dp"
                                android:text="Track your past charging sessions"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Chevron icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/text_secondary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <include
        android:id="@+id/footerLayout"
        layout="@layout/footer_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>