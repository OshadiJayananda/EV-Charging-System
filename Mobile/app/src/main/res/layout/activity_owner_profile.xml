<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle_background"
            android:padding="8dp" />

        <!-- Text Fields -->
        <TextView
            android:id="@+id/tvOwnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: John Doe"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvOwnerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: johndoe@gmail.com"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvOwnerNic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIC: 991234567V"
            android:layout_marginBottom="20dp" />

        <!-- Buttons -->
        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnDeactivate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deactivate Account"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnRequestReactivation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Reactivation"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</ScrollView>
