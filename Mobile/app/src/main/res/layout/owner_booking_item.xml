<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardBooking"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/gray_light"
    app:strokeWidth="0.5dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Header with Gradient Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_booking_header"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:gravity="center_vertical">

            <!-- Station Icon with Background -->
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_container"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_ev_station"
                    app:tint="@color/primary"
                    android:contentDescription="EV Hub" />
            </LinearLayout>

            <!-- Station Name and Location -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvStationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Borella EV Hub"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvStationLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ev Station , Sri Lanka"
                    android:textColor="@color/white_70"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Status Badge with Icon -->
            <LinearLayout
                android:id="@+id/statusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_status_pending"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_marginStart="8dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_clock"
                    app:tint="@color/white"
                    android:contentDescription="Status" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.03"
                    android:layout_marginStart="6dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Content Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Date and Time Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/primary"
                        android:contentDescription="Date" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oct 15, 2025"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:background="@color/gray_light"
                    android:layout_marginHorizontal="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_time"
                        app:tint="@color/primary"
                        android:contentDescription="Time" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:30 - 16:30"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Slot and Duration Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_slot"
                        app:tint="@color/primary"
                        android:contentDescription="Slot" />

                    <TextView
                        android:id="@+id/tvSlotNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Slot #2"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:background="@color/gray_light"
                    android:layout_marginHorizontal="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_duration"
                        app:tint="@color/primary"
                        android:contentDescription="Duration" />

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 hours"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Progress Bar for Charging Status -->
            <LinearLayout
                android:id="@+id/chargingProgressLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Charging Progress"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvProgressPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65%"
                        android:textColor="@color/primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressCharging"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    app:trackColor="@color/gray_light"
                    app:trackCornerRadius="3dp"
                    app:indicatorColor="@color/primary" />
            </LinearLayout>

            <!-- Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                style="@style/ModernOutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:text="View Booking Details"
                app:icon="@drawable/ic_arrow_right"
                app:iconGravity="textEnd"
                app:iconPadding="8dp" />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>